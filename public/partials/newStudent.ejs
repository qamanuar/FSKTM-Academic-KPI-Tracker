<form action="/lecturer-dashboard/student/uploadNew" method="POST" enctype="multipart/form-data">
  <label for="student">Student MongoDB ID</label>
  <input type="text" id="student" name="student" placeholder="Enter Student ObjectId" required />

  <label for="studentYear">Student Year</label>
<select id="studentYear" name="studentYear" required>
  <option value="Year 1" <%= student.studentYear === 'Year 1' ? 'selected' : '' %>>Year 1</option>
  <option value="Year 2" <%= student.studentYear === 'Year 2' ? 'selected' : '' %>>Year 2</option>
  <option value="Year 3" <%= student.studentYear === 'Year 3' ? 'selected' : '' %>>Year 3</option>
  <option value="Year 4" <%= student.studentYear === 'Year 4' ? 'selected' : '' %>>Year 4</option>
</select>

  <label for="kpiType">KPI Type</label>
  <select id="kpiType" name="kpiType" required>
    <option value="GPA">GPA</option>
    <option value="Attendance Percentage">Attendance Percentage</option>
    <option value="Event Engagement">Event Engagement</option>
  </select>

  <label for="semester">Semester</label>
  <select id="semester" name="semester" required>
    <option value="Semester 1">Semester 1</option>
    <option value="Semester 2">Semester 2</option>
    <option value="Special Semester">Special Semester</option>
  </select>

  <label for="session">Session</label>
  <select id="session" name="session" required>
    <option value="2023/2024">2023/2024</option>
    <option value="2024/2025">2024/2025</option>
    <option value="2025/2026">2025/2026</option>
  </select>

  <label for="fileUpload" class="file-label">Add Supporting File (PDF/DOC)</label>
  <input type="file" id="fileUpload" name="supportingFile" />

  <label for="assignerComment">Comment</label>
  <textarea name="assignerComment" rows="1" placeholder="Comment..."></textarea>

  <button type="submit">Submit</button>
</form>

<link rel="stylesheet" href="/css/formStyles.css">