
<form action="/lecturer-dashboard/student/uploadNew" method="POST" enctype="multipart/form-data" id="newStudentForm">
  
  
<input type="hidden" name="advisor" id="advisorIdHidden" />

<label mb-1>Academic Advisor: <span id="advisorNameDisplay"></span></label><br>

<label for="student">Select Student</label>
<select id="student" name="student" class="form-control" required>
  <option value="">-- Select Student --</option>
  <% students.forEach(function(student) { %>
    <option value="<%= student._id %>"><%= student.id %> - <%= student.name %></option>
  <% }) %>
</select>

  <label for="studentYear">Student Year</label>
<select id="studentYear" name="studentYear" required>
  <option value="Year 1" <%= student.studentYear === 'Year 1' ? 'selected' : '' %>>Year 1</option>
  <option value="Year 2" <%= student.studentYear === 'Year 2' ? 'selected' : '' %>>Year 2</option>
  <option value="Year 3" <%= student.studentYear === 'Year 3' ? 'selected' : '' %>>Year 3</option>
  <option value="Year 4" <%= student.studentYear === 'Year 4' ? 'selected' : '' %>>Year 4</option>
</select>

  <label for="kpiType">KPI Type</label>
  <select id="kpiType" name="kpiType" required>
    <option value="GPA" <%= student.kpiType === 'GPA' ? 'selected' : '' %>>GPA</option>
    <option value="Attendance Percentage" <%= student.kpiType === 'Attendance Percentage' ? 'selected' : '' %>>Attendance Percentage</option>
    <option value="Event Engagement" <%= student.kpiType === 'Event Engagement' ? 'selected' : '' %>>Event Engagement</option>
  </select>

  <label for="semester">Semester</label>
  <select id="semester" name="semester" required>
    <option value="Semester 1" <%= student.semester === 'Semester 1' ? 'selected' : '' %>>Semester 1</option>
    <option value="Semester 2" <%= student.semester === 'Semester 2' ? 'selected' : '' %>>Semester 2</option>
    <option value="Special Semester" <%= student.semester === 'Special Semester' ? 'selected' : '' %>>Special Semester</option>
  </select>

  <label for="session">Session</label>
  <select id="session" name="session" required>
    <option value="2023/2024" <%= student.session === '2023/2024' ? 'selected' : '' %>>2023/2024</option>
    <option value="2024/2025" <%= student.session === '2024/2025' ? 'selected' : '' %>>2024/2025</option>
    <option value="2025/2026" <%= student.session === '2025/2026' ? 'selected' : '' %>>2025/2026</option>
  </select>

  <label for="fileUpload" 
       id="custom-file-label" 
       class="file-label" 
       data-filename="<%= student.supportingFile ? student.supportingFile.split('/').pop() : '' %>">
    Add Supporting File (PDF/DOC)
  </label>
  <input type="file" class="form-control" id="fileUpload" name="supportingFile" />

  <label for="assignerComment">Comment</label>
  <textarea name="assignerComment" rows="1" placeholder="Comment..."><%= student.assignerComment || '' %></textarea>

  <button type="submit" id="submit">Submit</button>
</form>

<link rel="stylesheet" href="/css/formStyles.css">